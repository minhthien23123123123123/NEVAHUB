-- Khai báo biến
local rs = game:GetService("ReplicatedStorage")
local remotes = rs.Remotes

-- Hàm tăng tỉ lệ random cho Leopard
function increaseLeopardRandom()
    local remote = remotes.Roll
    local chance = remote:InvokeServer()
    -- Tìm và thay đổi giá trị của Leopard trong bảng chances
    for index, value in pairs(chance) do
        if value[1] == "Leopard" then
            chance[index][2] = 1
        end
    end
    remote:FireServer(chance)
end
